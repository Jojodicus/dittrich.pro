---
interface Props {
  videoId: string;
  title?: string;
  width?: number;
  height?: number;
  className?: string;
}

const {
  videoId,
  title = 'YouTube video',
  width = 560,
  height = 315,
  className = '',
} = Astro.props;
---

<div class={`rounded-2xl overflow-hidden ${className}`}>
  <iframe
    width={width}
    height={height}
    src={`https://www.youtube.com/embed/${videoId}`}
    title={title}
    frameborder="0"
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
    allowfullscreen
    class="w-full aspect-video"></iframe>
</div>
