---
import Button from './Button.astro';
---

<section
  class="relative min-h-[80vh] py-16 flex items-center justify-center overflow-hidden"
>
  <div class="absolute inset-0 opacity-10">
    <div
      class="absolute inset-0"
      style="background-image: linear-gradient(rgba(0, 247, 255, 0.3) 1px, transparent 1px), linear-gradient(90deg, rgba(0, 247, 255, 0.3) 1px, transparent 1px); background-size: 50px 50px;"
    >
    </div>
  </div>

  <div class="relative z-10 text-center px-4 max-w-4xl">
    <h1 class="text-5xl md:text-7xl font-bold mb-6 animate-on-load">
      Hi, I'm <span
        class="text-transparent bg-clip-text bg-gradient-to-r from-neon-cyan to-neon-violet"
        >Johannes</span
      >
    </h1>
    <p
      class="text-xl md:text-2xl text-dark-text-muted mb-8 animate-on-load"
      style="animation-delay: 0.1s;"
    >
      Developer, tinkerer, and occasional writer.
      <br />Building things that make life easier.
    </p>
    <div
      class="flex gap-4 justify-center animate-on-load"
      style="animation-delay: 0.2s;"
    >
      <Button
        href="https://github.com/jojodicus"
        target="_blank"
        rel="noopener noreferrer"
        variant="primary"
        size="lg"
        icon="lucide:github"
      >
        GitHub
      </Button>
      <Button
        id="hero-email-btn"
        data-email="am9oYW5uZXNAZGl0dHJpY2gucHJv"
        href="#"
        variant="secondary"
        size="lg"
        icon="lucide:mail"
      >
        Email
      </Button>
    </div>
  </div>
</section>

<script>
  document.addEventListener('astro:page-load', () => {
    const emailBtn = document.getElementById('hero-email-btn');
    if (emailBtn) {
      const encodedEmail = emailBtn.getAttribute('data-email');
      if (encodedEmail) {
        const email = atob(encodedEmail);
        (emailBtn as HTMLAnchorElement).href = `mailto:${email}`;
      }
    }
  });
</script>
