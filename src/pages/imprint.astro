---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const imprint = await getCollection('imprint');
const imprintContent = imprint[0];
const { Content } = await imprintContent.render();
---

<Layout title="Imprint - dittrich.pro" noindex={true}>
  <section class="py-16">
    <div class="mx-auto max-w-4xl px-4">
      <h1 class="text-4xl font-bold mb-8">Imprint</h1>
      <div class="prose prose-invert max-w-none">
        <Content />
      </div>
    </div>
  </section>
</Layout>
